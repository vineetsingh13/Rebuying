<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProductPage.ProductPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/iamge_slider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_unselected_dot="@drawable/default_unselected_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="12dp"
                app:iss_corner_radius="12"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="24dp"
                app:cardCornerRadius="48dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="38dp"
                        android:hint="CRANE"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/dummy_sold_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:hint="Sold By :   "
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:hint="TATA ORGANISATION"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#1D000000"
                        android:layout_marginTop="25dp"
                        />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/product_page_heading_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:hint="Description : "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/product_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/product_page_content_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:hint="lorem ipsum"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#1D000000"
                        android:layout_marginTop="25dp"
                        />

                    <TextView
                        android:id="@+id/product_information_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/product_page_heading_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:hint="Product Information : "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TableLayout
                        android:id="@+id/product_info_tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp">

                        <TableRow>
                            <TextView
                                android:id="@+id/machine_type"
                                android:text="Machine Type : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_type_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>


                        <TableRow>
                            <TextView
                                android:id="@+id/machine_manufacturer"
                                android:text="Manufacturer : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_manufacturer_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/model_number"
                                android:text="Machine Model : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/model_number_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:id="@+id/machine_build_date"
                                android:text="Machine Built Date : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_build_date_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>


                    </TableLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="7dp"
                        android:background="#1D000000"
                        android:layout_marginTop="25dp"
                        />

                    <TextView
                        android:id="@+id/product_metrics_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/product_page_heading_black"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="15dp"
                        android:hint="Product Metrics : "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TableLayout
                        android:id="@+id/product_metrics_tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp">

                        <TableRow>

                            <TextView
                                android:id="@+id/machine_dimension"
                                android:text="Dimensions : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_dimension_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/machine_weight"
                                android:text="Weight(Kg) : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_weight_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/machine_condition"
                                android:text="Condition : "
                                android:textColor="@color/product_page_content_black"
                                android:textSize="16sp"
                                android:padding="6dp"/>
                            <TextView
                                android:id="@+id/machine_condition_value"
                                android:layout_marginStart="5dp"
                                android:padding="6dp"
                                android:textSize="14sp"
                                android:text="Eicher motos"
                                android:textColor="@color/product_page_content_black"/>
                        </TableRow>

                    </TableLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>